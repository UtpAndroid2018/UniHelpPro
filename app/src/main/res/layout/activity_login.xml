<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_uhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106dp"
            android:src="@drawable/logo_uhp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/text_login_outlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="216dp"
            android:gravity="center_horizontal"
            android:text="@string/login_with_outlook"
            android:textSize="@dimen/title_login" />

        <ImageView
            android:id="@+id/login_with_outlook"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_below="@+id/text_login_outlook"
            android:layout_centerHorizontal="true"
            android:src="@drawable/outlook"
            android:contentDescription="@string/login_with_outlook" />
    </RelativeLayout>

</LinearLayout>